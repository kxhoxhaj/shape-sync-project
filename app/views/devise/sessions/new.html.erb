<div class="gx-0" id="authentication">
  <div class="row gx-0">
    <div class="col-12">
     <%= link_to root_path, class: "navbar-brand" do%>
      <%= image_tag 'favicon2.png', class: "center" %>
        <% end %>
      <h2 class="my-3 pt-0">Log in</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, label: false,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email", class: "transparent", placeholder: "Email" } %>
          <%= f.input :password, label: false,
                      required: false,
                      input_html: { autocomplete: "current-password", class: "transparent", placeholder: "Password"  } %>
          <div class="remember">
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in", class:"button-green w-100 mt-3 mb-3" %>
        </div>
        <div>
         <%= link_to "Dont have an account yet?", new_registration_path(resource_name), class:"btn-already text-white" %><br />
        </div>
         <div>
         <%= link_to "Forgot your password?", new_password_path(resource_name), class:"text-decoration-none text-white" %><br />
        </div>
      <% end %>
    </div>
  </div>
</div>
