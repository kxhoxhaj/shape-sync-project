<%= turbo_frame_tag dom_id(@workout, :exercises) do %>
  <div class="d-flex justify-content-between mt-3">
    <div class="d-flex align-items-center justify-space-between">
      <strong><h6>Your Exercises:</h6></strong>
    </div>
    <%= link_to 'Hide exercises', workout_program_path(@workout.workout_program), data: { turbo_frame: :_top }, class:"text-decoration-none text-white mb-2" %>
  </div>
  <div class="exercises-div">
    <table id="table">
      <tr>
        <th>
          <strong><h6>Name</h6></strong>
        </th>
        <th>
          <strong><h6>Sets</h6></strong>
        </th>
        <th>
          <strong><h6>Reps</h6></strong>
        </th>
        <th>
          <strong><h6>Weights</h6></strong>
        </th>
      </tr>
      <% if @exercises.any? %>
        <% @exercises.each do |exercise|  %>
          <%= turbo_frame_tag dom_id(exercise) do %>
            <tr>
              <td>
                <p><%= exercise.name %></p>
              </td>
              <td>
                <div class="edit-exercise d-flex">
                  <%= link_to '-', exercise_path(exercise, exercise: {sets: (exercise.sets - 1)}), data: {turbo_method: :patch}, class:"links"%>
                  <p><%= exercise.sets %></p>
                  <%= link_to '+', exercise_path(exercise, exercise: {sets: (exercise.sets + 1)}), data: {turbo_method: :patch}, class:"links"%>
                </div>
              </td>
              <td>
                <div class="edit-exercise d-flex">
                  <%= link_to '-', exercise_path(exercise, exercise: {reps: (exercise.reps - 1)}), data: {turbo_method: :patch}, class:"links"%>
                  <p><%= exercise.reps %></p>
                  <%= link_to '+', exercise_path(exercise, exercise: {reps: (exercise.reps + 1)}), data: {turbo_method: :patch}, class:"links"%>
                </div>
              <td>
                <div class="edit-exercise d-flex">
                  <%= link_to '-', exercise_path(exercise, exercise: {weight: (exercise.weight - 1)}), data: {turbo_method: :patch}, class:"links"%>
                  <p><%= exercise.weight %>kg</p>
                  <%= link_to '+', exercise_path(exercise, exercise: {weight: (exercise.weight + 1)}), data: {turbo_method: :patch}, class:"links"%>
                </div>
              </td>
            </tr>
          <% end %>
        <%end %>
      <% else %>
        <p>No exercises yet...</p>
      <% end %>
    </table>
  </div>
  <div class="d-flex justify-content-center">
    <div class="text-center">
      <strong><p>Add new Exercise</p></strong>
      <%= link_to new_workout_exercise_path(@workout) do %>
        <i class="fa-solid fa-circle-plus fa-2xl text-center"></i>
      <% end %>
    </div>
  </div>
<% end %>
