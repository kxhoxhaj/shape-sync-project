<% if user_signed_in? %>
  <%= render 'user_navbar' %>
<% else %>
  <%= render 'visitor_navbar' %>
<% end %>

<div class="container text-center" id="home-background">
  <h1 class="text-white"> Current Workout Program - <%= current_user.workout_program.weekly_frequency %> times per week</h1>
  <% current_user.workout_program.workouts.each do |workout| %>
  <div class="text-white mb-5 border border-danger">
    <p><%= workout.categories %></p>
    <% workout.exercises.each do |exercise| %>
      <div class="d-flex justify-content-between">
        <p>Gif of exercise</p>
       <!-- image_tag(exercise.gif) => Doesn't show anything because the first exercises that I seeded don't have any gifs from the API -->
        <p><%= exercise.name %></p>
      </div>
    <% end %>
  </div>
  <% end %>
</div>
