<% if user_signed_in? %>
  <%= render 'user_navbar' %>
<% else %>
  <%= render 'visitor_navbar' %>
<% end %>

<div>
  <% if user_signed_in? && current_user.workout_program.nil? %>
    <h1 class="text-center text-white">Create your workout program</h1>
    <%= link_to "Create Workout Program", new_workout_program_path, class: "button-green" %>
  <% end %>
</div>

<div class="container" id="home-background">
  <div class="createworkout mx-4 my-4 justify-content-center">
    <h2 class="text-center">Create your first workout!</h2>
  </div>

  <div class="border border-danger">
    <div class="info-card4 w-100 text-center">
      1409 workouts all time
    </div>
    <div class="info-card4 w-100 text-center">
      <!-- START OF CALENDAR FEATURE -->
      <%= week_calendar(events: @workouts, start_date_param: :start_date) do |date, workouts| %>
        <%= date %>
        <% workouts.each do |workout| %>
          <div class="workout">  <!-- We will add some style to the workout class later so let's add it now -->
            <p><%= workout.categories %></p>
          </div>
        <% end %>
      <% end %>
      <!-- END OF CALENDAR FEATURE -->
    </div>
    <div class="info-card4 w-100 text-center  py-4">
      Upcoming Training Session: Monday 11th of September
    </div>
  </div>

  <div class="info-card2 justify-content-center py-4">
    <div class="info-card">
      <div class="workout-name-card">
        <div class="ms-3">Picture</div>
        <div>Chest day</div>
      </div>

      <div class="info-card2 text-center">
        <p>Volume | Sets | Reps</p>
        <p>400kg 8  40</p>
      </div>
  </div>
    <div class="info-card3 d-flex justify-content-center">
      <i class="fa-solid fa-arrow-down-long"></i>
    </div>

  <div class="info-card2 justify-content-center py-4">
    <div class="info-card text-center">
      1. Barbell Bench Press
    </div>
    <div class="info-card text-center">
      <p>Volume | Sets | Reps</p>
      <p>400kg 8  40</p>
    </div>
  </div>
</div>
